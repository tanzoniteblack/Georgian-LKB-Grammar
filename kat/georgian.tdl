determiner-case-suffix-lex-rule-super := add-only-no-ccont-rule &
  [ INFLECTED [ DETERMINER-CASE-SUFFIX-FLAG +,
                1ST_2ND_PERSON_SUBJ_PREFIXES-OR-2ND_OBJ_SUFFIX-FLAG #1st_2nd_person_subj_prefixes-or-2nd_obj_suffix,
                NOUN-CASE-SUFFIX-FLAG #noun-case-suffix,
                3RD_SUBJ_SUFFIXES-FLAG #3rd_subj_suffixes,
                2ND_OBJ_SUFFIX-OR-OBJ_PREFIX-FLAG #2nd_obj_suffix-or-obj_prefix,
                1ST_2ND_SUBJ_PLURAL_SUFFIX-OR-2ND_OBJ_SUFFIX-FLAG #1st_2nd_subj_plural_suffix-or-2nd_obj_suffix,
                NOUN-PLURALITY-FLAG #noun-plurality ],
    DTR determiner-lex &
        [ INFLECTED [ 1ST_2ND_PERSON_SUBJ_PREFIXES-OR-2ND_OBJ_SUFFIX-FLAG #1st_2nd_person_subj_prefixes-or-2nd_obj_suffix,
                      NOUN-CASE-SUFFIX-FLAG #noun-case-suffix,
                      3RD_SUBJ_SUFFIXES-FLAG #3rd_subj_suffixes,
                      2ND_OBJ_SUFFIX-OR-OBJ_PREFIX-FLAG #2nd_obj_suffix-or-obj_prefix,
                      1ST_2ND_SUBJ_PLURAL_SUFFIX-OR-2ND_OBJ_SUFFIX-FLAG #1st_2nd_subj_plural_suffix-or-2nd_obj_suffix,
                      NOUN-PLURALITY-FLAG #noun-plurality ] ] ].

nominative-deter-lex-rule := determiner-case-suffix-lex-rule-super & infl-lex-rule &
