obj_prefix-lex-rule-super := 1_2_plurality-rule-dtr & 1st_2nd_person_subj_prefixes-rule-dtr & PSF-rule-dtr & add-only-no-ccont-rule & infl-lex-rule & preverb-rule-dtr & stem_augment-rule-dtr & tense_and_3rd_subj-rule-dtr &
  [ INFLECTED [ OBJ_PREFIX-FLAG +,
                TENSE_AND_3RD_SUBJ-FLAG #tense_and_3rd_subj,
                1ST_2ND_PERSON_SUBJ_PREFIXES-OR-3RD_PERSON-FLAG #1st_2nd_person_subj_prefixes-or-3rd_person,
                GENERAL_ENDING_VOWEL-NOUN-FLAG #general_ending_vowel-noun,
                PREVERB_OTHER-FLAG #preverb_other,
                DETERMINER-CASE-SUFFIX-FLAG #determiner-case-suffix,
                PREVERB-FLAG #preverb,
                PSF-FLAG #psf,
                3_PL_SUBJ_AOR-OR-3_PL_SUBJ_PRES-OR-3_SG_SUBJ_PRES-FLAG #3_pl_subj_aor-or-3_pl_subj_pres-or-3_sg_subj_pres,
                NOUN-CASE-SUFFIX-FLAG #noun-case-suffix,
                3RD_PERSON-OR-TENSE_AND_3RD_SUBJ-FLAG #3rd_person-or-tense_and_3rd_subj ],
    DTR transitive-verb-lex &
        [ INFLECTED [ TENSE_AND_3RD_SUBJ-FLAG #tense_and_3rd_subj,
                      1ST_2ND_PERSON_SUBJ_PREFIXES-OR-3RD_PERSON-FLAG #1st_2nd_person_subj_prefixes-or-3rd_person,
                      GENERAL_ENDING_VOWEL-NOUN-FLAG #general_ending_vowel-noun,
                      PREVERB_OTHER-FLAG #preverb_other,
                      DETERMINER-CASE-SUFFIX-FLAG #determiner-case-suffix,
                      PREVERB-FLAG #preverb,
                      PSF-FLAG #psf,
                      3_PL_SUBJ_AOR-OR-3_PL_SUBJ_PRES-OR-3_SG_SUBJ_PRES-FLAG #3_pl_subj_aor-or-3_pl_subj_pres-or-3_sg_subj_pres,
                      NOUN-CASE-SUFFIX-FLAG #noun-case-suffix,
                      3RD_PERSON-OR-TENSE_AND_3RD_SUBJ-FLAG #3rd_person-or-tense_and_3rd_subj ] ] ].

2nd_obj_prefix-lex-rule := obj_prefix-lex-rule-super &
