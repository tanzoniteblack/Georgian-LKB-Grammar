  [ INFLECTED [ PSF-FLAG -,
                PREVERB_OTHER-FLAG #preverb_other ],
    DTR.INFLECTED.PREVERB_OTHER-FLAG #preverb_other,
    SYNSEM.LOCAL.CONT.HOOK.INDEX.E.TENSE present ].

preverb_future-lex-rule := preverb-lex-rule-super &
  [ INFLECTED [ PSF-FLAG -,
