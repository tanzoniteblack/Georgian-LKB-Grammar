;;;;;;;;;;;;;;;;;;;;;;;;;

noun :+ [ CASE case ].

inflected :+ [ 1ST_2ND_PERSON_SUBJ_PREFIXES-OR-3RD_PERSON-FLAG luk,
    GENERAL_ENDING_VOWEL-NOUN-FLAG luk,
    DETERMINER-CASE-SUFFIX-FLAG luk,
    PREVERB_OTHER-FLAG luk,
    3RD_PERSON-OR-TENSE_AND_3RD_SUBJ-FLAG luk,
    PREVERB-FLAG luk,
    OBJ_PREFIX-FLAG luk,
    PSF-FLAG luk,
    3_PL_SUBJ_AOR-OR-3_PL_SUBJ_PRES-OR-3_SG_SUBJ_PRES-FLAG luk,
    NOUN-CASE-SUFFIX-FLAG luk,
    TENSE_AND_3RD_SUBJ-FLAG luk,
    2ND_OBJ_PREFIX-FLAG luk ].

infl-satisfied :+ [ 1ST_2ND_PERSON_SUBJ_PREFIXES-OR-3RD_PERSON-FLAG na-or-+,
    GENERAL_ENDING_VOWEL-NOUN-FLAG na-or-+,
    DETERMINER-CASE-SUFFIX-FLAG na-or-+,
    PREVERB_OTHER-FLAG na-or-+,
    3RD_PERSON-OR-TENSE_AND_3RD_SUBJ-FLAG na-or-+,
    PREVERB-FLAG na-or-+,
    OBJ_PREFIX-FLAG na-or-+,
    PSF-FLAG na-or-+,
